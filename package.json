{
    "name": "wa-api-backend",
    "version": "1.0.0",
    "description": "WhatsApp API Backend with Baileys - Support Multiple Sessions",
    "main": "server.js",
    "scripts": {
        "start": "node server.js",
        "dev": "nodemon server.js",
        "test": "jest",
        "test:watch": "jest --watch",
        "logs": "tail -f logs/app.log",
        "logs:error": "tail -f logs/error.log",
        "logs:webhook": "tail -f logs/webhook.log",
        "logs:whatsapp": "tail -f logs/whatsapp.log",
        "setup": "npm run setup:dirs && npm run setup:env",
        "setup:dirs": "mkdir -p data/sessions data/uploads logs && touch data/.gitkeep data/sessions/.gitkeep data/uploads/.gitkeep logs/.gitkeep",
        "setup:env": "cp .env.example .env",
        "clean": "npm run clean:logs && npm run clean:sessions",
        "clean:logs": "rm -f logs/*.log",
        "clean:sessions": "rm -rf data/sessions/*",
        "clean:uploads": "rm -rf data/uploads/*",
        "backup:sessions": "tar -czf backup-sessions-$(date +%Y%m%d_%H%M%S).tar.gz data/sessions/",
        "restore:sessions": "tar -xzf backup-sessions-*.tar.gz",
        "pm2:start": "pm2 start ecosystem.config.js",
        "pm2:stop": "pm2 stop wa-api",
        "pm2:restart": "pm2 restart wa-api",
        "pm2:logs": "pm2 logs wa-api",
        "docker:build": "docker build -t wa-api .",
        "docker:run": "docker run -p 3000:3000 -v $(pwd)/data:/app/data wa-api",
        "health": "curl -s http://localhost:3000/health | jq",
        "sessions": "curl -s -H 'x-api-key: your_api_key' http://localhost:3000/api/auth/sessions | jq"
    },
    "keywords": [
        "whatsapp",
        "api",
        "baileys",
        "nodejs",
        "multiple-sessions"
    ],
    "author": "Your Name",
    "license": "MIT",
    "dependencies": {
        "@whiskeysockets/baileys": "^6.7.0",
        "express": "^4.18.2",
        "cors": "^2.8.5",
        "helmet": "^7.1.0",
        "dotenv": "^16.3.1",
        "winston": "^3.11.0",
        "joi": "^17.11.0",
        "multer": "^1.4.5-lts.1",
        "qrcode": "^1.5.3",
        "qrcode-terminal": "^0.12.0",
        "axios": "^1.6.0",
        "moment": "^2.29.4",
        "lodash": "^4.17.21",
        "node-cron": "^3.0.3",
        "express-rate-limit": "^7.1.5",
        "sqlite3": "^5.1.6",
        "sequelize": "^6.35.0",
        "uuid": "^9.0.1",
        "sharp": "^0.32.6",
        "mime-types": "^2.1.35"
    },
    "devDependencies": {
        "nodemon": "^3.0.1",
        "jest": "^29.7.0",
        "@types/node": "^20.8.0"
    },
    "engines": {
        "node": ">=18.0.0"
    }
}